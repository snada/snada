          .blog-divider
          / Reply Section Start
          .reply
            %h3.title Leave a reply
            %form#reply.reply
              %fieldset
                .row
                  .col-lg-12.col-md-12.col-sm-12.col-xs-12
                    %label
                      Comment:
                      %span *
                    %textarea.form-control{cols: "40", required: "", rows: "3"}
              .text-center
                %button.btn.btn-2.btn-2c{type: "submit"}
                  Post Reply
              .clearfix
          / /Reply Section
        / /Post Block
