%section#section3.blog.single-post
  .content
    .container
      .row
        -if notice
          #notice.alert.alert-info
            =notice
        .posts-block.col-lg-9.col-md-9.col-sm-8.col-xs-12.bottom-pad
          %article.post.hentry
            =render partial: 'post_header', locals: {post: @post}
            .post-content
              ~render_markdown @post.body
          .blog-divider
          / Comments Section Start
          .comment-wrapper
            %h3.title Comments
            .clearfix
            .comments-sec
              %ol.commentlist
                %li
                  #1.comment
                    .avatar
                      =image_tag current_user.github_avatar if current_user
                    .comment-des
                      .arrow-comment
                      .comment-by
                        %strong
                          =current_user.nickname
                        %span.date July 30, 2013
                        %span.reply
                          %a{href: "#"}
                            %i.fa.fa-reply
                            Reply
