%section#section2.page-title
  .row
    .col-md-12.big-title
.text-center
  %h3
    All posts
.blog-divider
%section#section3.blog
  .content
    .container
      .text-center
        -if current_user
          =link_to 'New Post', new_post_path, class: 'btn btn-2'
          .blog-divider
      .row
        .posts-block.col-lg-9.col-md-9.col-sm-8.col-xs-12
          =render 'post_list'
        .sidebar.col-lg-3.col-md-3.col-sm-4.col-xs-12
          .widget.category
            %h3.title Categories
            =categories_list
