= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    %div
      =f.label(:title)
      =f.text_field :title, class: 'form-control'
    %div
      =f.label(:description)
      =f.text_field :description, class: 'form-control'
    %div
      =f.label(:keywords)
      =f.text_field :keywords, class: 'form-control'
    %div
      =f.label(:category_list)
      =f.text_field :category_list, class: 'form-control', value: @post.category_list.join(', ')
    %div
      =f.label(:body)
      =f.text_area :body, class: 'form-control', cols: 40, rows: 10
    %hr
    .text-center
      .actions
        =f.submit 'Save', class: 'btn btn-2 btn-2c'
