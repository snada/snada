.row
  .posts-block.col-lg-9.col-md-9.col-sm-8.col-xs-12
    - @posts.each do |post|
      %article.post.hentry
        .post-content-wrap
          =render partial: 'posts/post_header', locals: { post: post }
          .post-content
            %p
              =post.description
          %footer.post-footer
            =link_to 'Read more', post_path(post), class: 'btn btn-2 btn-2c'
        .clearfix
      .blog-divider
  .sidebar.col-lg-3.col-md-3.col-sm-4.col-xs-12
    .widget.category
      %h3.title Categories
      =categories_list
