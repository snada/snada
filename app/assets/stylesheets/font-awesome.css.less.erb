@import "fontawesome/less/font-awesome";

@font-face {
  font-family: 'FontAwesome';
  src: url(<%= asset_path 'fontawesome/fonts/fontawesome-webfont.eot' %>);
  src: url(<%= asset_path 'fontawesome/fonts/fontawesome-webfont.eot?iefix' %>) format('embedded-opentype'),
       url(<%= asset_path 'fontawesome/fonts/fontawesome-webfont.woff' %>) format('woff'),
       url(<%= asset_path 'fontawesome/fonts/fontawesome-webfont.ttf' %>) format('truetype'),
       url(<%= asset_path 'fontawesome/fonts/fontawesome-webfont.svg#fontawesomeregular' %>) format('svg');
  font-weight: normal;
  font-style: normal;
}
